<% if flash[:notice]  %>
	<p id="notice" ><%= flash[:notice] %></p>
<% end %>

<h1>New Company</h1>

<div>	
  
    <%= form_for(@company) do |f| %>
      <p>
      	<%= f.label :name %>
      	<%= f.text_field :name %>
      </p>
	
	  <p>
      	<%= f.label :url %>
      	<%= f.text_field :url %>
      </p>
      
      <p>
      	<%= f.label :fbid, 'Facebook ID' %>
      	<%= f.text_field :fbid %>
      </p>

       <p>
      	<%= f.label :desc, 'Description' %>
      	<%= f.text_field :desc %>
      </p>
     
      
      <%= f.submit "Create company"%>
    <% end %>
    
    <p><%= link_to 'Back', root_path %></p>

</div>
